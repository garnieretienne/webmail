- if @mailboxes
  - for mailbox in @mailboxes.models
    - if mailbox.selectable?()
      %li{class: "mailbox #{if mailbox.hasParent?() then 'child' else ''}", data-id: mailbox.id}
        %a{href: "#"}
          = mailbox.title()
          - if mailbox.hasChildren?()
            %a.dropdown-icon{href: "#"}
              .icon-chevron-down
    - else
      %li{class: "#{if mailbox.hasParent?() then 'child' else ''}"}
        = mailbox.title()
        - if mailbox.hasChildren?()
          %a.dropdown-icon{href: "#"}
            .icon-chevron-down
      
